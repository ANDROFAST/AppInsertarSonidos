<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.androidmorefast.moden.appusarmusica.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgGato"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/cat"
        android:layout_alignRight="@+id/btnGato"
        android:layout_alignEnd="@+id/btnGato"
        android:onClick="sonidoGato" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gato"
        android:id="@+id/btnGato"
        android:onClick="sonidoGato"
        android:layout_below="@+id/imgGato"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgLeon"
        android:layout_alignLeft="@+id/btnLeon"
        android:layout_alignStart="@+id/btnLeon"
        android:background="@drawable/leo"
        android:layout_alignTop="@+id/imgGato"
        android:onClick="sonidoLeon" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="leon"
        android:id="@+id/btnLeon"
        android:layout_alignTop="@+id/btnGato"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="sonidoLeon" />

</RelativeLayout>

